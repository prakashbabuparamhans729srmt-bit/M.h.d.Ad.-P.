rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin custom claim.
    // This is the core of the RBAC (Role-Based Access Control) system.
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Admins can read and write to any user document.
      allow read, write: if isAdmin();
      // A specific user can only read or write their own document.
      allow read, write: if request.auth.uid == userId;
    }
    
    // Allow admins to list the entire 'users' collection.
    // This is crucial for the User Management page.
    match /users {
      allow list: if isAdmin();
    }


    // Rules for the 'projects' subcollection, accessible as a collection group.
    // This allows an admin to query across all projects from all users.
    match /{path=**}/projects/{projectId} {
       // Admins can read/list any project from any user.
       allow read: if isAdmin();

       // A user can read/write to their own projects.
       // The path[1] corresponds to the {userId} in '/users/{userId}/...'.
       // An admin can also write to any project.
       allow write: if request.auth.uid == path[1] || isAdmin();
    }

    // Default deny rule for any other path not explicitly matched.
    // This is a security best practice.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
