rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper Functions
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@example.com';
    }

    // Admin can read everything
    match /{path=**} {
      allow read: if isAdmin();
    }
    
    // Rule for listing users - only admin can do this
    match /users/{userId} {
      allow list: if isAdmin();
      allow read, write: if request.auth.uid == userId || isAdmin();
    }

    // Rule for listing all projects across all users - only admin can do this
    match /{path=**}/projects/{projectId} {
       allow read, list: if isAdmin();
       allow write: if request.auth.uid == path[1] || isAdmin();
    }
  }
}
