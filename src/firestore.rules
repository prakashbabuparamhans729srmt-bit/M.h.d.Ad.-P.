rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin custom claim.
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // A user can read their own document, but only an admin can list all users.
    match /users/{userId} {
      allow get: if request.auth.uid == userId || isAdmin();
      allow list: if isAdmin();
      allow write: if request.auth.uid == userId || isAdmin();
    }
    
    // Rules for project subcollections
    match /users/{userId}/projects/{projectId} {
      // An admin can read any project. A user can read their own projects.
      allow read: if isAdmin() || request.auth.uid == userId;
      // An admin can write to any project. A user can write to their own projects.
      allow write: if isAdmin() || request.auth.uid == userId;
    }
    
    // As a collection group, admins can query across all projects from all users.
    match /{path=**}/projects/{projectId} {
       allow read, list: if isAdmin();
    }
    
    // Default deny all other reads/writes
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
